\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{latex_article_theme}

\RequirePackage{m3_color_defs}

\RequirePackage{ragged2e}

\RequirePackage{xcolor}
	\pagecolor{surface}
	\color{onSurface}

\RequirePackage[pagestyles,explicit]{titlesec}
	\titleformat{\section}{}{\Large\bfseries\color{secondary}\arabic{section}}{1em}{{\Large\bfseries\color{secondary}#1}}

\RequirePackage[labelfont={color=secondary}, font={color=onSurface}]{caption}

\RequirePackage{listings}
	\lstset{
		basicstyle=\ttfamily,
		commentstyle=\itshape\color{tertiary},
		stringstyle=\color{yellow},
		numberstyle=\ttfamily\color{onSurfaceVariant},
		backgroundcolor=\color{surfaceContainerLow}
	}

\RequirePackage{hyperref}
	\hypersetup{
		colorlinks=true,
		allcolors=tertiary
	}

\renewcommand{\maketitle}{
	\begin{Center}

	{\LARGE\bfseries\color{primary}\@title\par}

	\vspace{1em}

	{\large\color{secondary}\@author\par}

	\vspace{1em}

	{\large\color{secondary}\@date\par}

	\end{Center}
}

